@{
}
@model IEnumerable<About>

<a class="btn btn-outline-primary mb-3" href="/admin/about/create">Create</a>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Photo</th>

                           

                        <th></th>
                    </tr>
                </thead>


                <tfoot>
                    <tr>
                        <th>Title</th>
                        <th>Photo</th>

                          
                        <th></th>

                    </tr>
                </tfoot>



                <tbody>
                    @foreach (var item in Model)
                    {

                                        <tr>
                                        <td>@item.Title</td>
                                       

                                                    <td><img src = @item.PhotoURL width="100"/></td>
                                                             

                                        <td class="col-2">
                                            <a href="/admin/about/edit/@item.ID" class="btn btn-outline-warning">Edit</a>
                                             <a href="/admin/about/delete/@item.ID" class="btn btn-outline-danger">Delete</a>
                                        </td>


                                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>