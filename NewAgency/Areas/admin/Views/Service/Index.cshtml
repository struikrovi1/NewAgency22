@{
}
@model IEnumerable<Service>

<a class="btn btn-outline-primary mb-3" href="/admin/service/create">Create</a>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                         <th>Icon</th>
                            <th>Description</th>
                           

                        <th></th>
                    </tr>
                </thead>


                <tfoot>
                    <tr>
                       <th>Id</th>
                        <th>Title</th>
                         <th>Icon</th>
                            <th>Description</th>
                        <th></th>

                    </tr>
                </tfoot>



                <tbody>
                    @foreach (var item in Model)
                    {

                                            <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Title</td>
                                                 <td><i class="@item.Icon"></i></td>
                                                 <td>@item.Description</td>



                                            <td class="col-2">
                                                <a href="/admin/service/edit/@item.ID" class="btn btn-outline-warning">Edit</a>
                                                      <a href="/admin/service/delete/@item.ID" class="btn btn-outline-warning">Delete</a>
                                            </td>


                                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>